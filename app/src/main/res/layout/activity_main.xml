<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding"
    tools:context="com.udacity.android.basics.justjava.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/header_marginBottom"
        android:text="@string/textView_quantity_header"
        android:textAllCaps="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:onClick="decrement"
            android:text="@string/button_minus" />

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/quantity_value_marginEnd"
            android:layout_marginLeft="@dimen/quantity_value_marginLeft"
            android:layout_marginRight="@dimen/quantity_value_marginRight"
            android:layout_marginStart="@dimen/quantity_value_marginStart"
            android:text="@string/textView_quantity_value"
            android:textColor="@android:color/black"
            android:textSize="@dimen/value_textSize" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginBottom="@dimen/value_marginBottom"
            android:onClick="increment"
            android:text="@string/button_plus" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/header_marginBottom"
        android:text="@string/textView_price_header"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/value_marginBottom"
        android:text="@string/textView_price_value"
        android:textColor="@android:color/black"
        android:textSize="@dimen/value_textSize" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="submitOrder"
        android:text="@string/button_order" />

</LinearLayout>

